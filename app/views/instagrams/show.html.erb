<h1>詳細ページ</h1>

<div class="insta_show_img">
  <%= image_tag @insta.image %>
  <p>内容: <%= @insta.content %></p>
</div>

<div style="text-align:center;">
  <% unless @insta.user == current_user %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(instagram_id: @insta.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end %>
</div>
